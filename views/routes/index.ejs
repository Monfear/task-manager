<!DOCTYPE html>
<html lang="en">
    <%- include('./../partials/_head.ejs') %>

    <body id="index">
        <%- include('./../partials/_navbar.ejs') %>

            <section class="Home">
                <form class="form">
                    <h2 class="form__title">Add new task</h2>

                    <div class="form__item">
                        <input class="form__item__input" id="task" type="text" placeholder="your task">
                        <label class="form__item__label" for="task">for example clean up the room</label>
                    </div>

                    <button type="submit">submit</button>
                </form>

                <main class="tasks">
                    <article class="task">
                        <picture class="task__picture">
                            <i class="task__picture__icon fa-regular fa-square-check"></i>
                        </picture>

                        <p class="task__text">testing task</p>

                        <div class="task__buttons">
                            <button class="task__buttons__button">
                                <i class="task__buttons__button__icon fa-solid fa-pen-to-square"></i>
                            </button>
                            <button class="task__buttons__button">
                                <i class="task__buttons__button__icon fa-solid fa-trash"></i>
                            </button>
                        </div>
                    </article>
                </main>
            </section>

            <% if (tasks.length > 0) { %>
                <% tasks.forEach((task) => { %>
                    <a href="/tasks/task/<%= task.id %> ">
                        <p><%= task.name %> </p>
                    </a>
                <% }) %>
            <% } else { %>
                <p>no tasks to display</p>
            <% } %>

        <%- include('./../partials/_footer.ejs') %>
    </body>

</html>